{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=reportbuilder_db;Username=postgres;Password=password"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-here-must-be-at-least-32-characters-long",
    "Issuer": "JEGASolutions.ReportBuilder",
    "Audience": "JEGASolutions.ReportBuilder.Users",
    "ExpiryMinutes": 60
  },
  "OpenAI": {
    "ApiKey": "your-openai-api-key-here",
    "Model": "gpt-4",
    "MaxTokens": 4000
  },
  "ReportBuilder": {
    "Storage": {
      "ReportsPath": "./wwwroot/reports",
      "MaxSizeMB": 50,
      "AllowedFormats": ["PDF", "Excel", "CSV"]
    },
    "Cache": {
      "DurationMinutes": 60,
      "Enabled": true
    },
    "Export": {
      "PdfEngine": "iTextSharp",
      "ExcelEngine": "ClosedXML",
      "TemplatesPath": "./Templates/"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
